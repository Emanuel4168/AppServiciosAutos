        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="365dp"
        android:layout_height="210dp"
        android:layout_marginStart="8dp"
